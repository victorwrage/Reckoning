<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/reckoning_check_txt"
                android:startColor="@color/reckoning_check_txt" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/tab_bg"
                android:startColor="@color/tab_bg" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/tab_bg"
                android:startColor="@color/tab_bg" />

            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/reckoning_check_txt"
                android:startColor="@color/reckoning_check_txt" />

            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>

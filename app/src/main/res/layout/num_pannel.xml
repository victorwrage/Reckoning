<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_txt7"
            style="@style/verify_btn"
            android:text="7"
            />

        <TextView
            android:id="@+id/btn_txt8"
            style="@style/verify_btn"
            android:text="8"
            />

        <TextView
            android:id="@+id/btn_txt9"
            style="@style/verify_btn"
            android:text="9"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_txt4"
            style="@style/verify_btn"
            android:text="4"
            />

        <TextView
            android:id="@+id/btn_txt5"
            style="@style/verify_btn"
            android:text="5"
            />

        <TextView
            android:id="@+id/btn_txt6"
            style="@style/verify_btn"
            android:text="6"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_txt1"
            style="@style/verify_btn"
            android:text="1" />
        <TextView
            android:id="@+id/btn_txt2"
            style="@style/verify_btn"
            android:text="2" />
        <TextView
            android:id="@+id/btn_txt3"
            style="@style/verify_btn"
            android:text="3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60.0dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_dot"
            style="@style/verify_btn"
            android:text="."
            />
        <TextView
            android:id="@+id/btn_txt0"
            style="@style/verify_btn"
            android:text="0"
            />
        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/back_delete"
            android:scaleType="centerInside"
            android:background="@color/reckoning_edit_bg"
            />


    </LinearLayout>
</LinearLayout>
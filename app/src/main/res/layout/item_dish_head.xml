<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_dish_name"
        style="@style/essay_title_normal"
        android:layout_weight="1.5"
        android:background="@drawable/item_bg_no_right_b"
        android:text="菜名"/>
    <TextView
        android:id="@+id/item_dish_price"
        style="@style/essay_title_normal"
        android:background="@drawable/item_bg_no_right_b"
        android:text="单价"/>
    <TextView
        android:id="@+id/item_dish_count"
        style="@style/essay_title_normal"
        android:background="@drawable/item_bg_no_right_b"
        android:text="数量"/>
    <LinearLayout
        android:id="@+id/item_dish_discount_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_bg_no_right_b"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_dish_discount_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/discount_"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_dish_total"
        style="@style/essay_title_normal"
        android:background="@drawable/item_bg_right_left_b"
        android:text="小计"/>

</LinearLayout>
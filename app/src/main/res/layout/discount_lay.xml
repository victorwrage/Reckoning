<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/item_zhe_lay"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="@drawable/big_btn_backgroud_green"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/zhe_red" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="折扣"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_hui_lay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="@drawable/big_btn_backgroud"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/jianmian" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="优惠金额"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_cancel_lay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="@drawable/big_btn_backgroud_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/clean" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="取消优惠"
            android:textColor="@color/gray"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>
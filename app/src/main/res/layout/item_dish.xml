<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_dish_name"
        style="@style/essay_title_normal"
        android:layout_weight="1.5"
        android:textColor="@color/dodgerblue"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="@drawable/item_bg_no_right"
        android:text="茄子煲"/>
    <TextView
        android:id="@+id/item_dish_price"
        style="@style/essay_title_normal"
        android:textColor="@color/dodgerblue"
        android:background="@drawable/item_bg_no_right"
        android:text="18"/>
    <TextView
        android:id="@+id/item_dish_count"
        style="@style/essay_title_normal"
        android:textColor="@color/dodgerblue"
        android:background="@drawable/item_bg_no_right"
        android:text="1"/>
    <LinearLayout
        android:id="@+id/item_dish_discount_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/dodgerblue"
        android:background="@drawable/item_bg_no_right"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_dish_discount_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/discount_"/>
        <TextView
            android:id="@+id/item_dish_discount_tv"
            style="@style/essay_title_normal"
            android:text="0.8"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_dish_total"
        style="@style/essay_title_normal"
        android:textColor="@color/reckoning_txt"
        android:background="@drawable/item_bg_right_left"
        android:text="1"/>

</LinearLayout>